@page "/profile"

@*<EditForm Model="objProfile">*@
    <div class="w3-container">
        <div class="w3-row">
            <div class="w3-col s12 m4 l3 w3-padding-16">
                <div class="w3-card-4">
                    <img src="" class="w3-image" alt="My Profile Image" />
                </div>
